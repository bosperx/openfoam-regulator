FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (-0.01 0 0);

boundaryField
{
    inlet
    {
        type            regulatedVelocity;
        maxValue        uniform -0.01;
        minValue        uniform -0.001;
        regulator
        {
            targetValue 15;
            mode        twoStep;
            parameters
            {
                h       1;
            };
            sensor
            {
                field       T;
                type        patch;
                patchName   outlet;
            }
        }
    }

    outlet
    {
        type            zeroGradient;
    }

    wall
    {
        type            noSlip;
    }

    axis
    {
        type            empty;
    }

    front
    {
        type            wedge;
    }

    back
    {
        type            wedge;
    }
}

