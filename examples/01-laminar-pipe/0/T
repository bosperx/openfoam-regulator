FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 20;

boundaryField
{
    inlet
    {
        type            uniformFixedValue;
        uniformValue
        {
            type        expression;
            // arg() == time
            expression  #{ (arg() < 15) ? 20 : 20 #};
        }
    }

    outlet
    {
        type            zeroGradient;
    }

    wall
    {
        type            fixedGradient;
        gradient        uniform -500;
    }

    axis
    {
        type            empty;
    }

    front
    {
        type            wedge;
    }

    back
    {
        type            wedge;
    }
}

// ************************************************************************* //
