FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField    uniform 300;

boundaryField
{
    axis
    {
        type        empty;
    }

    inlet
    {
        type        fixedValue;
        value       uniform 300;
    }

    outlet
    {
        type        zeroGradient;
    }

    wall
    {
        type            temperaturePIDFixedValue;
        value           uniform 350;
        regulator
        {
            fieldName   T;
            patchName   outlet;
            targetValue 350;
            mode        twoStep;
            Kp          2;
            Ti          1e9;
            Td          0.00;
        };
    }

    wedgeFront
    {
        type            wedge;
    }

    wedgeBack
    {
        type            wedge;
    }
}