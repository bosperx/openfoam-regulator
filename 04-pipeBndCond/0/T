FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField    uniform 300;

boundaryField
{
    axis
    {
        type        empty;
    }

    inlet
    {
        type        fixedValue;
        value       uniform 300;
    }

    outlet
    {
        type        zeroGradient;
    }

    wall
    {
        type            temperaturePIDController;
        downstream      outlet;
        targetT         250;
        T               T;
        phi             phi;
        P               0.5;
        I               0.5;
        D               0.5;
        value           uniform 350;
    }

    wedgeFront
    {
        type            wedge;
    }

    wedgeBack
    {
        type            wedge;
    }
}